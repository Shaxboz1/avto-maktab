<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" style="-fx-background-image: url('backround.jpg'); -fx-background-position: center; -fx-background-repeat: no-repeat; -fx-background-size: 100%;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.server.ResultController">
   <children>
      <!-- Asosiy tugma butun ekranni egallaydi va boshqa tugmalarni o'rab turadi -->
      <Button fx:id="asosiyButton" style="-fx-background-color: #1A374D; -fx-border-color: white; -fx-border-radius: 7.5; -fx-alignment: center;" />

      <!-- ID, Ism, Familiya va Correct Answers ko'rsatiladigan tugmalar -->
      <Button fx:id="idLabel" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20;" />
      <Button fx:id="ismLabel" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20;" />
      <Button fx:id="famLabel" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20;" />
      <Button fx:id="button" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20;" />
      <Button fx:id="qaytish" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #00BFFF, #001F4D); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20; -fx-border-color: white" />
   </children>
</AnchorPane>
